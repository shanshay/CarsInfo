<Window x:Class="CarsInfo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarsInfo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="20 20 20 20">
        <Button x:Name="loadButton" Content="Загрузить" Click="loadButton_Click" Margin="10 10 10 10" HorizontalAlignment="Left" FontSize="15"/>
        <DataGrid x:Name="carsList" VerticalAlignment="Top" IsReadOnly="true" Margin="10 10 10 10" HorizontalAlignment="Left" Visibility="Collapsed" MouseLeftButtonDown ="Grid_MouseLeftButtonDown" SelectionMode="Single"/>
        <DataGrid x:Name="factoryList" VerticalAlignment="Top" IsReadOnly="true" Margin="10 10 10 10" HorizontalAlignment="Left" Visibility="Collapsed"/>
        <TextBlock x:Name="textNoFact" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed" Margin="10 10 10 10"></TextBlock>
    </StackPanel>
</Window>
